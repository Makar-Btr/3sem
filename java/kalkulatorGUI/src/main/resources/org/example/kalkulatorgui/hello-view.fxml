<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.kalkulatorgui.Controller"
      style="-fx-font-family: 'Arial'; -fx-font-size: 14px;">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Введите выражение:"/>
    <TextField fx:id="infixField" promptText="Например: 5*(3+2)/1"/>

    <Label text="Польская запись (Postfix):"/>
    <TextField fx:id="postfixField" editable="false" promptText="Здесь будет польская запись..."/>

    <Label text="Результат:"/>
    <TextField fx:id="resultField" editable="false" promptText="Здесь будет результат..."/>

    <Button fx:id="postfixButton" onAction="#onConvertToPostfixClick" text="В польскую запись" maxWidth="Infinity"/>
    <Button fx:id="calculateButton" onAction="#onCalculateClick" text="Рассчитать" maxWidth="Infinity"/>
</VBox>