<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.tables.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <ComboBox fx:id="sortComboBox" promptText="Сортировать по..." />
                <Button fx:id="sortButton" mnemonicParsing="false" onAction="#onSortButtonClick" text="Сортировать" />
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <Button fx:id="inputButton" mnemonicParsing="false" onAction="#onInputButtonClick" text="Загрузить из файла" />
            </children>
        </HBox>

        <TableView fx:id="studentTable" prefHeight="300.0" prefWidth="200.0" VBox.vgrow="ALWAYS">

            <columns>
                <TableColumn fx:id="surnameColumn" prefWidth="100.0" text="Surname" />
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="patronymicColumn" prefWidth="120.0" text="Patronymic" />
                <TableColumn fx:id="groupColumn" prefWidth="75.0" text="Group" />

                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>