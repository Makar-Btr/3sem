<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo.CostCalculatorController"
      xmlns="http://javafx.com/javafx/21">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="1. Выберите Поздравителя:">
        <font>
            <Font name="System Bold" size="13.0"/>
        </font>
    </Label>

    <CheckBox fx:id="huaweiCheck" text="Huawei"/>
    <CheckBox fx:id="yandexCheck" text="Yandex"/>
    <CheckBox fx:id="tbankCheck" text="TBank"/>

    <Label text="2. Выберите Подарок:">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <font>
            <Font name="System Bold" size="13.0"/>
        </font>
    </Label>
    <ListView fx:id="giftList" prefHeight="100.0"/>

    <Label text="3. Нужен ли Концерт? (Стоимость: 50000.00 руб.)">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <font>
            <Font name="System Bold" size="13.0"/>
        </font>
    </Label>
    <fx:define>
        <ToggleGroup fx:id="concertGroup"/>
    </fx:define>
    <RadioButton fx:id="concertYesRadio" text="Да" toggleGroup="$concertGroup"/>
    <RadioButton fx:id="concertNoRadio" text="Нет" toggleGroup="$concertGroup"/>

    <Label text="4. Вы Постоянный клиент?">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <font>
            <Font name="System Bold" size="13.0"/>
        </font>
    </Label>
    <CheckBox fx:id="persistentClientCheck" text="Да (скидка 10%)"/>

    <Button fx:id="calculateButton" text="Рассчитать" onAction="#onCalculateButtonClick" maxWidth="Infinity">
        <VBox.margin>
            <Insets top="15.0"/>
        </VBox.margin>
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>

    <Label text="Состав заказа:" style="-fx-font-weight: bold;">
        <VBox.margin>
            <Insets top="15.0"/>
        </VBox.margin>
    </Label>
    <TextArea fx:id="summaryTextArea" editable="false" wrapText="true" prefHeight="120.0"/>

    <Label text="ИТОГОВАЯ СТОИМОСТЬ:">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Label>
    <Label fx:id="totalCostLabel" text="0.00 руб." style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: green;"/>

</VBox>